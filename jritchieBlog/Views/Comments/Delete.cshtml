    ViewBag.Title = "Delete";
}


<div class="col-lg-8 col-md-8 col-sm-8">


    <h2>Delete Comment</h2>

    <h3>Are you sure you want to delete this?</h3>

    <div>
        @*<h4>Comment</h4>*@

        <hr class="blue" />

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Author.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Author.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Post.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Post.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Body)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Body)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Created)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Created)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Updated)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Updated)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UpdateReason)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UpdateReason)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                <a href="@Url.Action("Details", "Posts", new { slug = Model.Post.Slug } )">Back to Post</a>
            </div>
        }
    </div>
